- element ||= nil

- if element.present?
  .card.d-flex.flex-row.rounded.mb-3.shadow-lg.p-3.align-items-center
    .card-body.pl-4.py-2
      h4.text-primary.h5.font-weight-bold
        = element.title
      .card-text.text-secondary
        span = element.description
    .text-primary.h2.font-weight-semibold.mb-0
      = "#{element.number}%"
    .img-responsive-wrapper.pr-3
        .icon.mid-icon-large.text-primary.ml-3
          figure.mb-0
            = proxy_image_tag element.image_icon.url(w: 48,
              h: 48,
              fit: "crop"),
                data: {sizes: "100vw",
                  src: element.image_icon.url(w: 400,
                    h: 400,
                    fit: "crop",
                    auto: "compress"),
                  srcset: "#{element.image_icon.url(w: 330,
                      h: 330,
                      fit: 'crop',
                      auto: 'compress')} 480w,
                    #{element.image_icon.url(w: 333,
                      h: 333,
                      fit: 'crop',
                      auto: 'compress')} 632w,
                    #{element.image_icon.url(w: 333,
                      h: 333,
                      fit: 'crop',
                      auto: 'compress')} 844w,
                    #{element.image_icon.url(w: 400,
                      h: 400,
                      fit: 'crop',
                      auto: 'compress')} 1091w,
                    #{element.image_icon.url(w: 200,
                      h: 200,
                      fit: 'crop',
                      auto: 'compress')} 1320w,
                    #{element.image_icon.url(w: 245,
                      h: 245,
                      fit: 'crop',
                      auto: 'compress')} 1400w"},
                class: "lazyload d-block w-100",
                alt: element.image_icon.alt
